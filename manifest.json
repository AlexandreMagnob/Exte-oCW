{
    "manifest_version": 3,
    "name": "CW Scrapy",
    "version": "1.0",
    "description": "Web Scrapy da Card√°pio Web",
    "permissions": [
      "activeTab",
      "storage"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.ico",
        "48": "icons/icon48.ico",
        "128": "icons/icon128.ico"
      }
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "icons": {
      "16": "icons/icon16.ico",
      "48": "icons/icon48.ico",
      "128": "icons/icon128.ico"
    },
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.ico",
        "48": "icons/icon48.ico",
        "128": "icons/icon128.ico"
      }
    }
  }  