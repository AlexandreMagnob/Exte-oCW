{
  "manifest_version": 3,
  "name": "CW Scrapy",
  "version": "1.0.1",
  "description": "Web Scrapy da Cardápio Web para criação de listas",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.ico",
        "48": "icons/icon48.ico",
        "128": "icons/icon128.ico"
      }
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js", "papaparse.min.js", "sheet_generation.js"]
      }
    ],
    "icons": {
      "16": "icons/icon16.ico",
      "48": "icons/icon48.ico",
      "128": "icons/icon128.ico"
    }
  }  